<%= form_with(model: product, data: {
  controller: "nested-form",
  nested_form_wrapper_selector_value: '.nested-form-wrapper'
}) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <br/>
  
  <div>
    <% if current_user %>
      <%= form.label :user_id, hidden: true %>
      <%= form.number_field :user_id, id: :product_user_id, class:"form-control", value: current_user.id, hidden:true %>
    <% end %>
  </div>
  
  <div class="mb-3">
    <%= form.label :name %>
    <%= form.text_field :name, class:"form-control" %>
  </div>
 
  <div>
    <%= form.submit nil, class:"btn btn-outline-success btn-sm" %>
  </div>
<% end %>
