 <table class="table table-bordered">
    <thead style="position: sticky; top: 0; background-color: rgb(146, 211, 232); z-index: 10;">
      <tr>
        <th>Id</th>
        <th>Size</th>
        <th>Buying Price</th>
        <th>Selling Price</th>
        <th colspan="3">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @sizes.each do |size| %>
        <tr>
          <td>
             <%= size.product.id if size.product %> ,
             <%= size.id %></td>
          <td>
            <% if size.product %>
              <%= link_to size.product.name, size.product, class: "btn btn-outline-dark btn-sm fw-bold" %>
            <% end %>
              <%= link_to size.name, size, class: "btn btn-outline-primary btn-sm" %>
          </td>
          <td><%= number_to_currency(size.buying_price, unit:"Ksh ") %></td>
          <td><%= number_to_currency(size.selling_price, unit:"Ksh ") %></td>
          <td>
            <%= link_to "Edit", edit_size_path(size), class:'btn btn-warning btn-sm' %> |
            <%= link_to "Delete", size, data: { turbo_method: "delete", turbo_confirm: "Are you sure?"}, class:"btn btn-danger btn-sm" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="mb-3">
    <%= link_to 'Add New Size', new_size_path, class: 'btn btn-success btn-sm' %>
  </div>