<table class="table">
  <thead style="position: sticky; top: 0; background-color: rgb(146, 211, 232); z-index: 10;">
    <tr>  
      <th>Id</th>
      <th>Name</th>
      <th>Action</th>
    </tr>
  </thead>
<tbody>
 <% @sites.each do |s| %>
  <tr>
   <td><%= s.id %></td>
   <td><%= s.name %></td>
   <td>
     <%= link_to "View", s, class:"btn btn-primary btn-sm" %>     
   </td>
  </tr>
 <% end %>
</tbody>
</table>







