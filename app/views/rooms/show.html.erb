<div class="card mb-3 shadow-sm">
  <div class="card-body">
    <div class="row g-3">
      <div class="col-md-3">
        <strong>Room:</strong>
        <%= @room.name %>
      </div>

      <div class="col-md-3">
        <strong>Created By:</strong>
        <%= @room.user&.username %>
      </div>
    </div>
  </div>
</div>

<hr>  
    
<h5>Sections under this Room:</h5>

<% if @room.sections.any? %>
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Section Name</th>
        <th>Created By</th>
      </tr>
    </thead>
    <tbody>
      <% @room.sections.each do |section| %>
        <tr>
          <td><%= section.name %></td>
          <td><%= section.user&.username %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No sections linked to this room yet.</p>
<% end %>

<hr>

<div>
  <%= link_to "Edit this room", edit_room_path(@room), class: "btn btn-warning btn-sm" %> |
  <%= link_to "Back to rooms", rooms_path, class: "btn btn-primary btn-sm" %> |
  <%= link_to "Delete", @room, data: { turbo_method: "delete", turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
</div>
