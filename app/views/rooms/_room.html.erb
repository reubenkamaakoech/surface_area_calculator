<table class="table">
  <thead style="position: sticky; top: 0; background-color: rgb(146, 211, 232); z-index: 10;">
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
    <tbody>
     <% @rooms.each do |room| %>
      <tr>
        <td><%= room.id %></td>
        <td><%= room.name %></td>
        <td>
          <%= link_to "View", room,class:"btn btn-outline-primary btn-sm" %> |
          <%= link_to "Edit this room", edit_room_path(room), class:"btn btn-outline-warning btn-sm" %> |
          <%= link_to "Delete", room, data: { turbo_method: "delete", turbo_confirm: "Are you sure?" }, class:"btn btn-outline-danger btn-sm" %>
        </td>
      </tr>
     <% end %>
    </tbody>
</table>



  