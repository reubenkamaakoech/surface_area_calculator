<% content_for :title, "user" %>

<div class="container">

<% if @user %>

<div class="card mb-3" style="max-width: 400px;">
  <div class="card-header bg-primary text-white">
    <%= @user.username %>
  </div>

  <div class="card-body">
    <p class="card-text">
      <strong>Email:</strong> <%= @user.email %><br>
      
    </p>
  </div>
</div>
 
<div>
  <%= link_to "Edit", edit_user_path(@user), class:"btn btn-warning btn-sm" %> |
  <%= link_to "Back", users_path, class:"btn btn-primary btn-sm" %> |
  <%= link_to "Delete", @user, method: :delete, data: { confirm: "Are you sure you want to delete this user?" }, class: "btn btn-danger btn-sm" %>
</div><br/>
</div>

<% else %>
  <p>User not found.</p>
<% end %>
</div>
