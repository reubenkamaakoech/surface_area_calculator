<div class="card mb-3 shadow-sm">
  <div class="card-body">
    <div class="row g-3">
      <div class="col-md-3">
        <strong>Section:</strong>
        <%= @section.name %>
      </div>

      <div class="col-md-3">
        <strong>Created By:</strong>
        <%= @section.user&.username %>
      </div>
    </div>
  </div>
</div>

<hr>

<h5>Rooms under this Section:</h5>

<% if @section.rooms.any? %>
  <table class="table table-striped table-sm">
    <thead>
      <tr>
        <th>Room Name</th>
        <th>Created By</th>
      </tr>
    </thead>
    <tbody>
      <% @section.rooms.each do |room| %>
        <tr>
          <td><%= room.name %></td>
          <td><%= room.user&.username %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>No rooms linked to this section yet.</p>
<% end %>

<hr>

<div>
  <%= link_to "Edit this section", edit_section_path(@section), class: "btn btn-warning btn-sm" %> |
  <%= link_to "Back to sections", sections_path, class: "btn btn-primary btn-sm" %> |
  <%= link_to "Delete", @section, data: { turbo_method: "delete", turbo_confirm: "Are you sure?" }, class: "btn btn-danger btn-sm" %>
</div>
